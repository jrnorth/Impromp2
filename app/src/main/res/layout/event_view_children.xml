<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/activatedBackgroundIndicator">
    <ImageView
        android:id="@+id/event_imageView"
        android:layout_width="@dimen/event_list_image_size"
        android:layout_height="@dimen/event_list_image_size"
        android:contentDescription="@string/app_name"
        android:layout_margin="5dp"/>
    <TextView
        android:id="@+id/event_nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/event_imageView"
        android:layout_toLeftOf="@+id/event_disclosureImageView"
        android:layout_alignTop="@id/event_imageView"
        android:singleLine="true"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/event_timeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/event_imageView"
        android:layout_toLeftOf="@id/event_disclosureImageView"
        android:layout_below="@id/event_nameTextView"
        android:drawableLeft="@drawable/ic_action_time"
        android:singleLine="true"/>
    <TextView
        android:id="@+id/event_locationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/event_imageView"
        android:layout_toLeftOf="@id/event_disclosureImageView"
        android:layout_below="@id/event_timeTextView"
        android:drawableLeft="@drawable/ic_action_place"
        android:singleLine="true"/>
    <TextView
        android:id="@+id/event_categoryTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/event_imageView"
        android:layout_toLeftOf="@id/event_disclosureImageView"
        android:layout_below="@id/event_locationTextView"
        android:drawableLeft="@drawable/ic_action_category"
        android:singleLine="true"/>
    <ImageView
        android:id="@id/event_disclosureImageView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_action_next_item" />
</RelativeLayout>